<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/accountImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/accDesc"
        android:onClick="activityOperator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toEndOf="@+id/helpBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/accountImg"
        app:layout_constraintStart_toEndOf="@+id/helpBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_suol" />

    <ImageView
        android:id="@+id/helpBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/accDesc"
        android:onClick="activityOperator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_setting" />

    <Switch
        android:id="@+id/themeSwitch"
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="92dp"
        android:onClick="switchOnClick"
        app:layout_constraintStart_toEndOf="@+id/helpBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="421dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/themeSwitch">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="TextView" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/y_fir"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_y_first"
                        android:onClick="webSitesLinks"/>

                    <ImageView
                        android:id="@+id/y_sec"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_y_sec"
                        android:onClick="webSitesLinks"/>

                    <ImageView
                        android:id="@+id/y_thir"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_y_third"
                        android:onClick="webSitesLinks"/>

                    <ImageView
                        android:id="@+id/y_four"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_y_forth"
                        android:onClick="webSitesLinks"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="TextView" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/n_fir"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_n_fir"
                        android:onClick="webSitesLinks"/>

                    <ImageView
                        android:id="@+id/n_sec"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_n_sec"
                        android:onClick="webSitesLinks"/>

                    <ImageView
                        android:id="@+id/n_thir"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_n_third"
                        android:onClick="webSitesLinks"/>

                    <ImageView
                        android:id="@+id/n_four"
                        android:layout_width="174dp"
                        android:layout_height="200sp"
                        app:srcCompat="@drawable/ic_n_forth"
                        android:onClick="webSitesLinks"/>
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/mapImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/accDesc"
                android:onClick="activityOperator"
                app:srcCompat="@drawable/ic_map" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>